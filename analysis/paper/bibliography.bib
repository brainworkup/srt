  keywords = {Adolescent,Adult,Cognition,Factor Analysis,Female,Humans,Male,Middle Aged,Neuropsychological Tests,Schizophrenia,Schizophrenia: genetics,Schizophrenic Psychology,Severity of Illness Index,Siblings,Siblings: psychology,Statistical,Young Adult},
