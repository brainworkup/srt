  file     = {:Users/joey/Library/Application Support/Mendeley Desktop/Downloaded/Chen et al. - 2018 - Schizophrenia polygenic risk score predicts mnemonic hippocampal activity.pdf:pdf},
  issn     = {14602156},
  journal  = {Brain},
  keywords = {Genetics,Hippocampal activity,Neuroimaging genetics,Polygenic risk score (PRS),Schizophrenia},
