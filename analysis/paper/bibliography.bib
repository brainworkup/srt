  issn      = {09209964},
  journal   = {Schizophrenia Research},
  keywords  = {Familial aggregation,Neurocognition,Schizophrenia,Siblings},
  number    = {1-3},
  pages     = {159--166},
  publisher = {Elsevier B.V.},
  title     = {{Familial aggregation of clinical and neurocognitive features in sibling pairs with and without schizophrenia}},
