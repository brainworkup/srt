  doi      = {10.3758/BF03212460},
  file     = {:Users/joey/Library/Application Support/Mendeley Desktop/Downloaded/Sternberg - 1967 - Two operations in character recognition Some evidence from reaction-time measurements.pdf:pdf},
  issn     = {0031-5117},
  journal  = {Perception & Psychophysics},
